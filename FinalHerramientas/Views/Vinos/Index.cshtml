@model FinalHerramientas.ViewModels.VinoListVM

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.vinos[0].Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.vinos[0].Año)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.vinos[0].Variedad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.vinos[0].Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.vinos[0].Stock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.vinos[0].BodegaNombre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.vinos) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Año)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Variedad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BodegaNombre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
